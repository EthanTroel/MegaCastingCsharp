<Window x:Class="MegaCastingWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MegaCastingWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#F2F2F2">
        <!--Boutons-->
        <DockPanel x:Name="dockPanel"/>
        <StackPanel Orientation="Vertical" Margin="0,10,0,10" HorizontalAlignment="Center" Width="780">
            <Button Content="Castings" Margin="-650,10,5,0" Height="92" Width="102"  Background="#0078D7" Foreground="White" BorderBrush="Transparent" Click="Button_Click_1"/>
            <Button Content="Partenaires" Margin="-650,10,5,0" Width="100" Height="91" Background="#2ECC71" Foreground="White" BorderBrush="Transparent" Click="Button_Click_2"/>
            <Button Content="Client" Margin="-650,10,5,0" Width="100" Height="89" Background="#E67E22" Foreground="White" BorderBrush="Transparent" Click="Button_Click"/>
        </StackPanel>

    </Grid>
</Window>
